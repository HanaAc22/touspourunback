{% extends 'base.html.twig' %}

{% block body %}
   <h1>All Questions</h1>
   {% for question in questions %}
      <div style="background-color: #99bfbf">
         <h5 style="color: #a74931">{{ question.name }}</h5>
         <h4 >{{ question.question }}</h4>
      </div>
      <div style="background-color: #3f82e8">
         <h1>Answers</h1>
         {% for answer in question.answers %}
          <ul>
            <li>{{ answer.content }}</li>
          </ul>
         {% endfor %}
      </div>
   {% endfor %}
{% endblock %}