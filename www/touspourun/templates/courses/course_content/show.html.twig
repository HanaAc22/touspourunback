{% extends 'base.html.twig' %}
{% block content %}

    {% for course in courses %}
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">{{ course.title }}</h2>
                {% if course.picture is not null %}
                    <img src="{{ asset("uploads/images/" ~ course.picture)}}" alt="{{ course.title }}" style="width: 20%; height: 20%">
                {% endif %}
                <p class="card-text">{{ course.content }}</p>
                <p class="card-text">{{ course.createdAt|date('Y-m-d H:i:s') }}</p>
                {% for course in courses %}
                    {% for category in course.categories %}
                        <li>{{ category.name }}</li>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}
